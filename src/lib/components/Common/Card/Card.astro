---
import CardMinimal from './CardMinimal.astro'
import CardStatic from './CardStatic.svelte'
import CardDefault from './CardDefault.svelte'

export interface Props {
   type?: 'minimal' | 'static' | 'default';
   icon?: string
   title?: string
   href?: string
   element?: string
}

const {
   type = 'default', 
   icon = '', 
   title = '', 
   href = '',
   element = 'div'
} = Astro.props

---

{type === 'default' && <CardDefault {...{icon, title, href}}><slot/></CardDefault>}
{type === 'minimal' && <CardMinimal {...{icon, title, href}}><slot/></CardMinimal>}
{type === 'static' && <CardStatic {...{icon, title, element}}><slot/></CardStatic>}