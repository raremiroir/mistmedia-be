{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*":       ["src/*"],
      "@public/*":  ["src/public/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*":   ["src/pages/*"],
      "@comp/*":    ["src/lib/components/*"],
      "@styles/*":  ["src/lib/styles/*"],
      "@utils/*":   ["src/lib/utils/*"],
      "@types/*":  ["src/lib/types/*"],
      "@config/*":   ["src/lib/config/*"],
      "@stores/*":  ["src/stores/*"],
    }
  }
}